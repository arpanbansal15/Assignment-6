<div class="row">
  <main class="col-md-12">
    <br>
    <h2>Students</h2>
    <a href="/students/add" class="btn btn-success float-end">Add New Student</a>
    <hr />
    {{#if students.length}}
    <table class="table">
      <thead>
        <tr>
          <th>Student Number</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Course</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each students}}
        <tr>
          <td>{{studentNum}}</td>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{email}}</td>
          <td>{{status}}</td>
          <td>{{course}}</td>
          <td>
            <a href="/student/{{studentNum}}" class="btn btn-info btn-sm">View</a>
            <a href="/student/delete/{{studentNum}}" class="btn btn-danger btn-sm">Remove</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <p>No students found.</p>
    {{/if}}
  </main>
</div>
